<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @companies.each do |company| %>
      <div class="row my-2">
        <div class="col-9">
          <a href="<%= company_path(company) %>" class="list-group-item list-group-item-action">
            <%= company.name %>
          </a>
        </div>
        <div class="col-2">
          <%= link_to 'Delete Company', company, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", id: 'delete_company' %>
        </div>
      </div>
      <% end %>
    </ul>
  <% end %>
</div>
